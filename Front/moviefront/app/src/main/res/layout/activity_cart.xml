<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CartActivity">

    <!-- Toolbar en haut -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cartToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        app:title="Your Cart"
        app:titleCentered="true"
        tools:ignore="MissingConstraints" />

    <!-- RecyclerView pour afficher les articles du panier -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCartItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cartToolbar"
        app:layout_constraintBottom_toTopOf="@id/llCartPayment" />

    <!-- Section de paiement du panier -->
    <LinearLayout
        android:id="@+id/llCartPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <!-- Ligne pour afficher le sous-total des articles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLastSubTotalItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SubTotal Items (0)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/tvLastSubTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </LinearLayout>

        <!-- Bouton de commande -->
        <Button
            android:id="@+id/btnCartCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button"
            android:text="Checkout"
            android:textColor="@color/white"
            android:textAllCaps="false" />
    </LinearLayout>
    <!-- Ligne pour afficher le sous-total des article -->

</androidx.constraintlayout.widget.ConstraintLayout>
